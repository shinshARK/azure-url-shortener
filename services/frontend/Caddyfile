:80 {
    # API Routes - Priority Handling
    handle /api/auth* {
        reverse_proxy http://auth-service
    }

    handle /api/links* {
        reverse_proxy http://link-management-service
    }

    # Explicitly match the analytics route
    handle /api/analytics/* {
        reverse_proxy http://analytics-query-service:3001
    }

    # Frontend - Fallback for everything else
    handle {
        root * /srv
        try_files {path} /index.html
        file_server
    }
}
